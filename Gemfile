source "https://rubygems.org"

# github-pages will ensure the supported versions of Jekyll and its dependencies are installed.
gem "github-pages"

# I also like compass and one day, I hope, GitHub will support the rouge syntax highlighter.
gem "compass"
gem "rouge"

# Added asciidoctor and asciidoctor-diagram to create SVG diagrams from AsciiDoc/PlanUML text.
gem "asciidoctor"
gem "asciidoctor-diagram"

# Added in response to a warning from Jekyll
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# Add the modular scale calculator built into your Sass from http://modularscale.com
# and https://github.com/modularscale/modularscale-sass. If you want to use it, remember to
# include it in your 'config.rb' (require 'modular-scale' and import it in one of your .scss files,
# such as style.scss (@import 'modular-scale').
gem 'modular-scale'
